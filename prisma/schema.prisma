model investment {
  id Int @id @default(autoincrement())
  symbol String @unique
  openingPrice Int
  totalQuotas Int
  totalOpeningPosition Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}
